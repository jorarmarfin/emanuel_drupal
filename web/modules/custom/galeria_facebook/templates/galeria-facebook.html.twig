<!-- Add you custom twig html here -->
<div class="row">
	{% for album in data.albums|slice(0, data.cnt_albums) %}
	<div class="col-md-4">
		<div class="portfolio-item">
			<a href="https://www.facebook.com/pg/Grupo-de-oraci%C3%B3n-Emanuel-{{data['pageid']}}/photos/?tab=album&album_id={{album['id']}}">
				<span class="thumb-info thumb-info-lighten">
					<span class="thumb-info-wrapper">
						<img class="img-responsive" width="200px" height="200px" alt="Presentation" src="https://graph.facebook.com/v3.0/{{album['cover_photo']['id']}}/picture?access_token={{data['token']}}">
						<span class="thumb-info-title">
							<span class="thumb-info-inner">{{album['name']}}</span>
						</span>
					</span>
				</span>
			</a>
		</div>
	</div><!--span-->
	{% endfor %}
</div><!--row-->
<div class="row">
	<div class="col-md-12">
		<div class="get-started">
			<a href="https://www.facebook.com/pg/grupodeoracionemanuel/photos/?ref=page_internal" class="btn btn-lg btn-primary" target="_blank">Ver todos los Albums</a>
		</div>
	</div><!--span-->
</div><!--row-->